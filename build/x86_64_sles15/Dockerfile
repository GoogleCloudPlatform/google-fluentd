FROM opensuse/leap:15.5

RUN zypper -n refresh \
 && zypper -n install \
        # Needed for gpg2 and rvm installation.
        curl \
        dirmngr \
        procps \
        # Needed for agent build.
        autoconf \
        bzip2 \
        expect \
        gcc-c++ \
        git \
        patch \
        ruby \
        rpm-build \
        which \
        zlib-devel \
        xz \
 # RVM GPG keys.
 && mkdir -p ~/.gnupg && echo "disable-ipv6" >> ~/.gnupg/dirmngr.conf \
 && gpg2 --keyserver hkp://keyserver.ubuntu.com --recv-keys 409B6B1796C275462A1703113804BB82D39DC0E3 7D2BAF1CF37B13E2069D6956105BD0E739499BDB \
 # Install RVM.
 && curl -sSL -o get-rvm-io.sh https://get.rvm.io \
 && (echo "7bbf79be95e516f72945e558a4290b40ff8714158140a00991d42172ff78e209  get-rvm-io.sh" | sha256sum --check) \
 && /bin/bash get-rvm-io.sh stable \
 && rm -f get-rvm-io.sh \
 # RVM requires running in a login shell.
 && /bin/bash -l -c "rvm requirements && rvm install 3.3.9 && gem install bundler --no-document && gem update --no-document" \
 # Pretend we're on SLES 15.
 && /bin/sed -i -e 's/VERSION="15.5"/VERSION="15-SP5"/' /etc/os-release \
 && zypper -n clean
